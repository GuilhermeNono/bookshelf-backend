<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="now" value="now()" dbms="mysql"/>

    <changeSet id="creating user_library_course table" author="guilherme.nono">
        <createTable tableName="user_library_course">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints
                        primaryKey="true"
                        primaryKeyName="pk_user_library_course"
                        nullable="false"/>
            </column>
            <column name="active" type="tinyint">
                <constraints nullable="false"/>
            </column>
            <column name="fk_user_user_library_course" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_user_user_library_course"
                             referencedTableName="user_library"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
            <column name="fk_course_user_library_course" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_course_user_library_course"
                             referencedTableName="course"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
            <column name="fk_library_user_library_course" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="fk_library_user_library_course"
                             referencedTableName="library"
                             referencedColumnNames="id"
                             deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>